<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" android:useLevel="false">
            <solid android:color="#C3FF1F" />
            <size android:width="10dp" android:height="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" android:useLevel="false">
            <solid android:color="#E2FF40" />
            <size android:width="10dp" android:height="10dp" />
        </shape>
    </item>
</selector>