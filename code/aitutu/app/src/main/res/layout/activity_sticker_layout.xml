<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_sticker_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/BaseToolbarTheme"
        app:navigationIcon="@drawable/icon_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="编辑图片(贴纸)"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </android.support.v7.widget.Toolbar>

    <com.goertek.aitutu.mvp.ui.custom.sticker.StickerView
        android:id="@+id/activity_sticker_stickerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:showIcons="true">

        <ImageView
            android:id="@+id/activity_sticker_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.goertek.aitutu.mvp.ui.custom.sticker.StickerView>

    <HorizontalScrollView
        android:id="@+id/activity_sticker_horizontalscollview"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_sticker_revolve"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="旋转"
                android:drawableTop="@drawable/icon_revolve"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/activity_sticker_sticker"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="贴纸"
                android:gravity="center"
                android:textColor="@color/black"
                android:drawableTop="@drawable/icon_sticker"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/activity_sticker_crop"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="裁剪"
                android:gravity="center"
                android:textColor="@color/black"
                android:drawableTop="@drawable/crop"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/activity_sticker_filter"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="滤镜"
                android:gravity="center"
                android:textColor="@color/black"
                android:drawableTop="@drawable/filtermirror"
                android:textSize="16dp" />
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/activity_sticker_parentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="8dp"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="透明度"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <SeekBar
                android:id="@+id/activity_sticker_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/activity_sticker_eraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="橡皮檫"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_sticker_recycleview_leftback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="返回"
                android:drawableLeft="@drawable/image_edit_back"
                android:drawablePadding="6dp"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_sticker_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>